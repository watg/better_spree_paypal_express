<%= link_to(image_tag("https://www.paypalobjects.com/webstatic/en_US/i/btn/png/gold-pill-paypal-26px.png"), paypal_express_url(:payment_method_id => payment_method.id), :method => :post, :id => "paypal_button") %>

<script>
  var setPaypalExpress = function(e) {
    SpreePaypalExpress.paymentMethodID = "<%= payment_method.id %>"
  };
  document.addEventListener("DOMContentLoaded", setPaypalExpress);
  document.addEventListener("page:load", setPaypalExpress);
</script>
